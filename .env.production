# Mama Africa Restaurant Management System - Backend Environment Variables
# PRODUCTION CONFIGURATION

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (your Vercel deployment)
FRONTEND_URL=https://mama-africa-phi.vercel.app

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.mongodb.net/mama_africa?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=mama_africa_super_secure_jwt_secret_key_2024_production_environment
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=https://mama-africa-phi.vercel.app

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=mama_africa_super_secure_session_secret_2024_production

# API Configuration
API_VERSION=v1

# Additional Production URLs
PRODUCTION_FRONTEND_URL=https://mama-africa-phi.vercel.app
